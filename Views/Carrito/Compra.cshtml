@model CarritoProducto
@{
    ViewData["Title"] = "Carrito";
    ViewData["SubTitle"] = "Compra";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb small">
        <li class="breadcrumb-item"><a class="text-decoration-none" title="Regresar al listado"
                asp-action="Index">Listado</a></li>
        <li class="breadcrumb-item active" aria-current="page">@ViewData["SubTitle"]</li>
    </ol>
</nav>

<h2 class="text-center mb-3">@ViewData["Title"] <small class="text-muted fs-5">@ViewData["SubTitle"]</small></h2>

<p class="text-danger">¿Está seguro que desea comprar estos elementos?</p>
<p class="text-danger">@ViewData["ErrorMessage"]</p>

<div class="card mt-3">
    <div class="row g-0">
        <div class="col-md-8">
            <div class="card-body">
                @if (Model.Producto != null)
                {
                    <div class="mb-3 ps-3">
                        <label class="form-label form-text">Título del producto</label>
                        <div class="form-text text-body">@Model.Producto.Titulo</div>
                    </div>
                    <div class="mb-3 ps-3">
                        <label class="form-label form-text">Cantidad en el carrito</label>
                        <div class="form-text text-body">@Model.Cantidad</div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<form asp-action="ProductoCarrito" asp-route-id="@Model.ProductoId">
    <div class="text-center mt-3">
        <button id="btnEnviar" type="submit" class="btn btn-sm btn-primary">Eliminar</button>
        <a class="btn btn-sm btn-outline-secondary" asp-action="Index" title="Cancelar">Cancelar</a>
    </div>
</form>
